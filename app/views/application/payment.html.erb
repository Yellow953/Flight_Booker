<h1>Payment</h1>

<%= form_for( checkout_path, method: :post) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :ccn %>
    <%= f.text_field :ccn %><br>

    <%= f.label :security_code %>
    <%= f.text_field :security_code %><br>

    <%= f.label :exp_date %>
    <%= f.date_field :exp_date %><br>

    <input type=”hidden” name=”stripeToken”/>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Ticket payment"
        data-amount="<%=  %>0"
        data-locale="auto">
    </script>

    <script src="https://js.stripe.com/v2/"></script> 

    <script>
        Stripe.setPublishableKey(‘pk_test_SAfpkFB2WVKLbQVukGCTVq5Z’);
    </script>

    <%= f.submit "Submit" %>
<% end %>