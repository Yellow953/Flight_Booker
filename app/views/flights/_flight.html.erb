<div id="<%= dom_id flight %>">
  <p>
    <strong>Name:</strong>
    <%= flight.name %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= flight.time %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= flight.duration %>
  </p>

  <p>
    <strong>Start Airport:</strong>
    <% Airport.all.each do |a| %>
      <% if flight.start_airport == a.id %>
          <%= a.name %>
      <% end %>
    <%end%>
  </p>

  <p>
    <strong>End Airport:</strong>
    <% Airport.all.each do |a| %>
      <% if flight.end_airport == a.id %>
          <%= a.name %>
      <% end %>
    <%end%>
  </p>

</div>
